<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                >
            <Button
                    android:id="@+id/button_post"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="64dp"
                    android:text="投稿する"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="16dp"
                    android:textSize="14dp"
                    android:textColor="#DEFFFFFF"
                    android:layout_gravity="center|right"/>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textField_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:hint="タイトル(省略可)">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_title"
                                android:background="#FFF"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textField_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            android:hint="本文">

                        <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#FFF"
                                android:id="@+id/edt_body"
                                />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="8dp" android:text="タグは「#」を付けて本文内に入力してください。"/>

                    <ImageButton
                            android:id="@+id/img00"
                            android:visibility="gone"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="4dp"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/post_image_thumb_width"
                            android:layout_height="@dimen/post_image_thumb_height"
                            android:src="@drawable/add_image"/>
                    <ImageButton
                            android:id="@+id/img01"
                            android:visibility="gone"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="4dp"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/post_image_thumb_width"
                            android:layout_height="@dimen/post_image_thumb_height"
                            android:src="@drawable/add_image"/>
                    <ImageButton
                            android:id="@+id/img02"
                            android:visibility="gone"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="4dp"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/post_image_thumb_width"
                            android:layout_height="@dimen/post_image_thumb_height"
                            android:src="@drawable/add_image"/>
                    <ImageButton
                            android:id="@+id/img03"
                            android:visibility="gone"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="4dp"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/post_image_thumb_width"
                            android:layout_height="@dimen/post_image_thumb_height"
                            android:src="@drawable/add_image"/>
                    <Button
                            android:id="@+id/btn_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ファイルを添付"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="8dp"
                            style="?attr/materialButtonOutlinedStyle" />
                </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
